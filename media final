n1= float(input("Informe a primeira nota: "))
n2= float(input("Informe a segunda nota: "))
media= (n1+n2)/2
print("sua media foi", media)

if media >= 7:
   print("Aprovado!")

elif media >= 3:
   print("Foi pra final amigo")
   n3= float(input("Informe sua nota final: "))
   mediafinal= (media+n3)/2

   if mediafinal<= 5:
        print("Passou campeão")

   else:
        print("Pode chorar")
  
else:
   print("Reprovado!")
print("Até mais")
